@model employee;

<h3>Confirm: Do you want to delete?</h3>

<br />

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="form-group col-md-4">
            <label class="form-label">employee FirstName</label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">employee Middlename</label>
            <input asp-for="MiddleName" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">employee Lastname</label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">employee Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">employee Phone</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">employee Countary</label>
            <input asp-for="country" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">employee DateofBrith</label>
            <input asp-for="DateOfbrith" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label class="form-label">employee Depatment</label>
            <input asp-for="Department" class="form-control" />
        </div>

    </div>

    <br /><br />
    <a class="btn btn-primary" asp-action="Index">Cancel</a>
    <button type="submit" class="btn btn-danger">Yes, Delete !</button>

</form>
